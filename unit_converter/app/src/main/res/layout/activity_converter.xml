<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mat"
    tools:context=".converter">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#4DFFFFFF"
        android:columnCount="3"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">


        <EditText
            android:id="@+id/editTextNumber1"
            android:layout_width="137dp"
            android:layout_height="79dp"
            android:gravity="center"
            android:textColorHint="@color/black"
            android:hint="MM"
            android:textColor="@color/black"
            android:layout_row="0"
            android:layout_column="0"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextNumber7"
            android:layout_width="137dp"
            android:layout_height="79dp"
            android:gravity="center"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:hint="KG"
            android:layout_row="3"
            android:layout_column="0"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextNumber5"
            android:layout_width="137dp"
            android:layout_height="79dp"
            android:layout_row="2"
            android:gravity="center"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="G"
            android:layout_column="0"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/editTextNumber6"
            android:layout_width="137dp"
            android:layout_height="79dp"
            android:gravity="center"
            android:textColorHint="@color/black"
            android:textSize="20dp"
            android:hint="KG"
            android:textColor="@color/black"
            android:layout_row="2"
            android:layout_column="2"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/editTextNumber4"
            android:layout_width="137dp"
            android:layout_height="79dp"
            android:textSize="20dp"
            android:gravity="center"
            android:textColorHint="@color/black"
            android:hint="MM"
            android:textColor="@color/black"
            android:layout_row="1"
            android:layout_column="2"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/editTextNumber8"
            android:layout_width="137dp"
            android:layout_height="79dp"
            android:gravity="center"
            android:textColorHint="@color/black"
            android:hint="G"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_row="3"
            android:layout_column="2"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/button6"
            android:layout_width="115dp"
            android:layout_height="84dp"
            android:onClick="abcd"
            android:layout_row="0"
            android:layout_column="1"
            android:text="CONVERT" />

        <Button
            android:id="@+id/button8"
            android:layout_width="115dp"
            android:layout_height="84dp"
            android:layout_row="1"
            android:onClick="asdf"
            android:layout_column="1"
            android:text="CONVERT" />

        <Button
            android:id="@+id/button9"
            android:layout_width="115dp"
            android:layout_height="84dp"
            android:layout_row="3"
            android:onClick="asdfgh"
            android:layout_column="1"
            android:text="CONVERT" />

        <Button
            android:id="@+id/button7"
            android:layout_width="115dp"
            android:layout_height="84dp"
            android:layout_row="2"
            android:onClick="asdfg"
            android:layout_column="1"
            android:text="CONVERT" />

        <TextView
            android:id="@+id/editTextNumber2"
            android:layout_width="139dp"
            android:textSize="20dp"
            android:layout_height="78dp"
            android:gravity="center"
            android:textColorHint="@color/black"
            android:hint="CM"
            android:textColor="@color/black"
            android:layout_row="0"
            android:layout_column="2"
            android:ems="10"
            android:inputType="number" />

         <EditText
            android:id="@+id/editTextNumber3"
            android:layout_width="139dp"
            android:layout_height="78dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="CM"
            android:layout_row="1"
            android:layout_column="0"
            android:ems="10"
            android:inputType="number" />
    </GridLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/architects_daughter"
        android:gravity="center"
        android:background="#57FFFFFF"
        android:text="MEASURE MATE"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>